<!DOCTYPE html>
<html lang="ru">

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<meta http-equiv="X-UA-Compatible" content="ie=edge" />
	<link rel="stylesheet" href="/style.css" />
	<title>Чат с {{options.toName}}</title>
</head>

<body>
	<div class="chat" id="chat">
		<div id="chat-window">
			<div class="chat-head">Вы начали беседу с - {{options.toName}} <br /> Вы - {{options.fromName}}</div>
			<div id="output">
				{{#messages}}
				<div class="msg"><img src="/img/ava.png" alt="ava">
					<div class="info">
						<h3>{{fromName}}</h3>
						<p>{{message}}</p>
					</div>
				</div>
				{{/messages}}
			</div>
		</div>
		<div class="feedback">
			<div id="feedback"></div>
		</div>
		<!-- <input type="text" id="handle" placeholder="Имя пользователя" /> -->
		<form id="message-form">
			<div class="form">
				<textarea type="text" id="message" placeholder="Ваше сообщение"></textarea>
				<button id="send">Отправить</button>
			</div>
		</form>
	</div>
	<script>
		var toName = '{{options.toName}}';
		var fromName = '{{options.fromName}}';
		var from = '{{ options.from }}';
		var to = '{{ options.to }}';
		var who = '{{ options.who }}';
	</script>
	<script src="http://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
	 crossorigin="anonymous"></script>
	<script src="/socket.io/socket.io.js"></script>
	<!-- <script src="/app.js"></script> -->
	<script src="/chat.js"></script>
	<a href="/account/signin/">Вход в аккаунт</a>
</body>

</html>